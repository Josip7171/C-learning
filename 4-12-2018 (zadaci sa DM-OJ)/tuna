#include <iostream>
#include "math.h"

int main()
{
	int broj_tuna = 0, razlika_cijene = 0, zbroj_cijena = 0, unos1 = 0, unos2 = 0, unos3 = 0;

	std::cin >> broj_tuna;
	std::cin >> razlika_cijene;
	for (int i = 0; i < broj_tuna; i++) {
		std::cin >> unos1 >> unos2;
		if (std::abs(unos1 - unos2) > razlika_cijene ){
			std::cin >> unos3;
			zbroj_cijena += unos3;
		}
		else {
			if (unos1 < unos2) {
				zbroj_cijena += unos2;
			}
			else {
				zbroj_cijena += unos1;
			}
		}
	}
	std::cout << zbroj_cijena;
}
