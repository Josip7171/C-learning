#include <iostream>
#include <iomanip>
#include <vector>

int main()
{
	std::vector<int> vector1;
	int counter = 0;
	int unos = 0;
	for(int i = 0; i < 2;){
		std::cout << "Unesi element u vector ( \"0\" za izlaz) : ";
		std::cin >> unos;
		if (unos != 0 && i == 1) {
			vector1.push_back(unos + vector1[counter-1]);
		}
		else if (i == 0) {
			vector1.push_back(unos);
			i++;
		}
		else {
			i++;
		}
		counter++;
	}


	std::cout << "\n";
	for (int i = 0; i < vector1.size(); i++) {
		std::cout << vector1[i] << ", ";
	}

}
