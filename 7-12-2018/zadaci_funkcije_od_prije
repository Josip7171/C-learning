#include "pch.h"
#include <iostream>
#include <string>

void ninty_nine_bottles();
int f_zbroj(int broj1, int broj2);
int f_lozinka(std::string);
void tablica_mnozenja();
void izbornik();
void calculator();
float zbrajanje(float, float);
float oduzimanje(float, float);
float mnozenje(float, float);
float djeljenje(float, float);


//_____________________________________________________________________________________________________________________
int main()
{
	izbornik();
}
//_______________________________________________________________________________________________________________________
void ninty_nine_bottles() {
	for (int i = 100; i > 0; --i) {
		std::cout << "\n" << i << "bottles of beer on the wall, " << i << " bottles of beer.";
		std::cout << "\nTake one down and pass it around, " << i - 1 << " bottles of beer on the wall.";
	}
}

int f_zbroj(int broj1, int broj2) {
	return broj1 + broj2;
}


int f_lozinka(std::string unos) {
	if (unos == "123") {
		std::cout << "\nLoznika tocna!";
		return 1;
	}
	else {
		std::cout << "\nNetocna lozinka. Pokusajte ponovno!";
		return 0;
	}
}

void tablica_mnozenja() {
	int tab_mno[10][10];

	for (int i = 0; i < 10; i++) {
		for (int j = 0; j < 10; j++) {
			tab_mno[i][j] = (i + 1) * (j + 1);
		}
		std::cout << std::endl;
	}

	for (int i = 0; i < 10; i++) {
		for (int j = 0; j < 10; j++) {
			std::cout << tab_mno[i][j] << "\t";
		}
		std::cout << std::endl;
	}
}

void izbornik() {
	int zadatak;
	

	do {
		std::cout << "\nUnesi koji zadatak zelis izvrsiti (1 - 7)  ";
		std::cout << "\n\n1. 99 Bottles \n2. Beskonacni zbroj unosa \n3. Lozinka \n4. Tablica mnozenja \n6. Kalkulator \n7.Izmjena varijabli \n:  ";
		std::cin >> zadatak;
		//zadatak 1
		if (zadatak == 1) {
			ninty_nine_bottles();
		}
		//zadatak 2
		else if (zadatak == 2) {
			int unos = 0, zbroj = 0;
			do {
				std::cout << "\nUpisi integer : ";
				std::cin >> unos;
				std::cout << "Zbroj je " << f_zbroj(unos, zbroj) << std::endl;
				zbroj += unos;
			} while (unos != 0);
		}
		//zadatak 3
		else if (zadatak == 3) {
			std::string lozinka = "123", unos_lozinke;
			std::cout << "Unesi lozinku (tocna je \"123\")  ";
			for (int i = 0; i < 3; i++) {
				std::cout << "\nPokusaj " << i + 1 << " : ";
				std::cin >> unos_lozinke;
				if (f_lozinka(unos_lozinke) == 1) {
					i = 4;
				}
			}
		}

		//zadatak 4
		else if (zadatak == 4) {
			tablica_mnozenja();
		}

		//zadatak 5
		else if (zadatak == 5) {
			std::cout << "\n\nIzbornik radi!";
		}

		//zadatak 6
		else if (zadatak == 6) {
			calculator();
		}
	} while (zadatak != 0);
	
}

void calculator() {
	float broj1 = 0, broj2 = 0;
	char operator1 = ' ';
	std::cout << "\nUnesite prvi broj : ";
	std::cin >> broj1;
	std::cout << "\nUnesite drugi broj : ";
	std::cin >> broj2;
	std::cout << "\nUnesite operator (+, -, *, /) : ";
	std::cin >> operator1;
	if (operator1 == '+') {
		std::cout << "\n" << zbrajanje(broj1, broj2);
	}
	else if (operator1 == '-') {
		std::cout << "\n" << oduzimanje(broj1, broj2);
	}
	else if (operator1 == '*') {
		std::cout << "\n" << mnozenje(broj1, broj2);
	}
	else if (operator1 == '/') {
		std::cout << "\n" << djeljenje(broj1, broj2);
	}
	else
		std::cout << "\n\nKrivi unos!";
}

float zbrajanje(float a, float b) {
	return a + b;
}
float oduzimanje(float a, float b) {
	return a - b;
}
float mnozenje(float a, float b) {
	return a * b;
}
float djeljenje(float a, float b) {
	return a / b;
}