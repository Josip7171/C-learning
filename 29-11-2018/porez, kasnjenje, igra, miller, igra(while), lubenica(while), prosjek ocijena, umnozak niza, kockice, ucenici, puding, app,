zadatak ucenici 

#include<iostream>
#include <string>

int main() {
	float broj_unosa = 0;
	float unosi = 0;
	float counter = 120;
	std::string ime = " ", prezime = " ", oib = " ", mbg = " ";
	int godine = 0;
	std::string ime1 = " ", prezime1 = " ", oib1 = " ", mbg1 = " ";
	int godine1 = 0;
	std::cin >> broj_unosa;
	for (int i = 0; i < broj_unosa; i++) {
		std::cin >> ime >> prezime >> godine >> oib >> mbg;
		while (godine < counter) {
			counter = godine;
			ime1 = ime;
			prezime1 = prezime;
			godine1 = godine;
			oib1 = oib;
			mbg1 = mbg;
		}
	}
	std::cout << ime1 << " " << prezime1 << " " << godine1;
}



---------------------------------------------------------
puding zadatak (sa while)

#include <iostream>
#include <string>

int main() {
	int N = 0, A = 0, B = 0, C = 0, D = 0, E = 0, x = 0;
	std::cin >> N >> A >> B >> C >> D >> E;
	while (((N - ((A + B + C) / 2)) < (D / 2) && x == 0)) {
		x++;
		std::cout << "PUDING OD VANILIJE";
	}
	while (((N - ((A + B + C) / 2)) >= (D / 2) && x == 0)) {
		x++;
		std::cout << "PUDING OD COKOLADE";
	}
}



