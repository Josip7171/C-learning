zadatak kockice 

#include <iostream>
#include <string>

int main() {
	int mirko = 0, slavko = 0;
	std::cin >>mirko>>slavko;
	int x = 0, y = 0, z = 0;
	while(mirko == 1 && x == 0){
	    mirko = 6;
	    x++;
	}
	while(mirko == 2 && x == 0){
	    mirko =5 ;
	    x++;
	}
	while(mirko == 3 && x == 0){
	    mirko =4;
	    x++;
	}
	while(slavko == 1 && y == 0){
	    slavko = 6;
	    y++;
	}
	while(slavko == 2 && y == 0){
	    slavko =5 ;
	    y++;
	}
	while(slavko == 3 && y == 0){
	    slavko =4;
	    y++;
	}
	while(slavko > mirko && z == 0){
	    std::cout << "slavko";
	    z++;
	}
	while(slavko < mirko && z == 0){
	    std::cout << "mirko";
	    z++;
	}
	while(slavko == mirko && z == 0){
	    std::cout << "nerijeseno";
	    z++;
	}
}


