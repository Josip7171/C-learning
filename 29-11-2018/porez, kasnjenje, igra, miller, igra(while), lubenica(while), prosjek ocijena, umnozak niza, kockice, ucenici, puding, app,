zadatak umnozak niza 

#include <iostream>

int main() {
	float broj_unosa = 0;
	float unosi = 0;
	float counter = 1;
	std::cin >> broj_unosa;
	for (int i = 0; i < broj_unosa; i++) {
		std::cin >> unosi;
		counter = counter * unosi;
	}
	std::cout << counter;
}


