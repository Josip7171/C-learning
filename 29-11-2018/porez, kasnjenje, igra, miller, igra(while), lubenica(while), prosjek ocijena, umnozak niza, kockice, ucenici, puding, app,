zadatak app
#include <iostream>
#include <string>

int main() {
	int igra_a = 0, igra_b = 0, cijena_a_1 = 0, cijena_a_2 = 0, cijena_b_1 = 0, cijena_b_2 = 0;
	std::cin >> igra_a >> igra_b >> cijena_a_1 >> cijena_a_2 >> cijena_b_1 >> cijena_b_2;
	if (igra_a > igra_b) {
		if (cijena_a_1 < cijena_a_2) {
			std::cout << cijena_a_1;
		}
		else {
			std::cout << cijena_a_2;
		}
	}
	else {
		if (cijena_b_1 < cijena_b_2) {
			std::cout << cijena_b_1;
		}
		else{
			std::cout << cijena_b_2;
		}
	}
}



