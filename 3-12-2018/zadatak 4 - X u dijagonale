#include <iostream>

int main()
{
	int N = 0;
	std::cout << "Koliko redova/stupaca zelite : ";
	std::cin >> N;
	char polje[100][100];
	//popunjavanje polja
	for (int i = 0; i < N; i++) {
		for (int j = 0; j < N; j++) {
			polje[i][j] = 'O';
		}
	}

	//ispis polja
	for (int i = 0; i < N; i++) {
		for (int j = 0; j < N; j++) {
			std::cout << polje[i][j] << "  ";
		}
		std::cout << std::endl;
	}

	//popuna dijagonala
	for (int i = 0; i < N; i++) {
		for (int j = 0; j < N; j++) {
			if (i == j) {
				polje[i][j] = 'X';
			}
			if (i + j == N-1) {
				polje[i][j] = 'X';
			}
		}
		std::cout << std::endl;
	}

		//Ispis rijesenja
	for (int i = 0; i < N; i++) {
		for (int j = 0; j < N; j++) {
			std::cout << polje[i][j] << "  ";
		}
		std::cout << std::endl;
	}

}
